{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="d-flex flex-column h-100 {{body_class}}" data-template="base.twig">
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="banner" >
			{% block header %}
				<div class="container">
					<nav class="navbar navbar-expand-md navbar-light">
						<a class="brand align-self-center" href="{{site.url}}">{{site.name}}</a>
						<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar_menu_id" aria-controls="navbar_menu_id" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div id="navbar_menu_id" class="collapse navbar-collapse menu-main-container">
							{% include "menu.twig" with {'items': menu.get_items} %}
						</div>
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		<section id="content" role="document" class="wrap container flex-shrink-0">
			<div class="content">
				<main class="main">
					{% block content %}
						Sorry, no content
					{% endblock %}
				</main>
			</div>
			{% if sidebar %}
				<aside class="sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer" class="content-info footer mt-auto">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
